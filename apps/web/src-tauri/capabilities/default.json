{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-spawn",
    "shell:allow-execute",
    "shell:allow-open",
    "notification:default",
    "deep-link:default",
    "process:default",
    "updater:default",
    "global-shortcut:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "gh", "cmd": "gh", "args": true },
        { "name": "claude", "cmd": "claude", "args": true },
        { "name": "codex", "cmd": "codex", "args": true },
        { "name": "opencode", "cmd": "opencode", "args": true },
        { "name": "which", "cmd": "which", "args": true }
      ]
    }
  ]
}
